<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101419" 
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.main.ChooserFragment">

    <!-- PixelVault Title -->
    <TextView
        android:id="@+id/tvChooserAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PixelVault"
        android:textColor="#00E676" 
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User Info Section -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_pixelvault_logo" 
        app:civ_border_width="2dp"
        app:civ_border_color="#00E676"
        app:layout_constraintTop_toBottomOf="@id/tvChooserAppTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Welcome back,"
        android:textColor="#B0B3B8" 
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile"
        app:layout_constraintBottom_toTopOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        tools:text="Andrio Smith" 
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage"
        app:layout_constraintBottom_toBottomOf="@id/ivUserProfile"
        app:layout_constraintEnd_toStartOf="@id/ivNotificationIcon"/>

    <ImageView
        android:id="@+id/ivNotificationIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_popup_reminder" 
        app:tint="#B0B3B8"
        android:contentDescription="Notifications"
        app:layout_constraintEnd_toStartOf="@id/ivSettingsIcon"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/ivUserProfile" />

    <ImageView
        android:id="@+id/ivSettingsIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@android:drawable/ic_menu_preferences" 
        app:tint="#B0B3B8"
        android:contentDescription="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/ivUserProfile" />

    <!-- Encode Image Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEncodeImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#1E2228" 
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivUserProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconEncodeCard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_secure" 
                app:tint="#00E676"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/titleEncodeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Encode Image"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iconEncodeCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrowEncodeCard"/>

            <TextView
                android:id="@+id/subtitleEncodeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Secure your image data"
                android:textColor="#B0B3B8"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/iconEncodeCard"
                app:layout_constraintTop_toBottomOf="@id/titleEncodeCard"
                app:layout_constraintEnd_toStartOf="@+id/arrowEncodeCard"/>

            <ImageView
                android:id="@+id/arrowEncodeCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_play" 
                android:rotation="0" 
                app:tint="#B0B3B8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Decode Image Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDecodeImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#1E2228"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardEncodeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconDecodeCard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_lock_lock" 
                app:tint="#00E676"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/titleDecodeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Decode Image"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iconDecodeCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrowDecodeCard" />

            <TextView
                android:id="@+id/subtitleDecodeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Reveal the original image"
                android:textColor="#B0B3B8"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/iconDecodeCard"
                app:layout_constraintTop_toBottomOf="@id/titleDecodeCard"
                app:layout_constraintEnd_toStartOf="@+id/arrowDecodeCard" />

            <ImageView
                android:id="@+id/arrowDecodeCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_play" 
                android:rotation="0" 
                app:tint="#B0B3B8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
