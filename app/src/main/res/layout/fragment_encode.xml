<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B2A"
    android:padding="16dp"
    tools:context=".ui.main.encode.EncodeFragment">

    <!-- Back to Dashboard Button -->
    <TextView
        android:id="@+id/btnBackToDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        app:drawableStartCompat="@android:drawable/ic_media_previous" 
        app:drawableTint="#E0E0E0"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Input Form Group -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupEncodeInputForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivEncodePageIcon,tvEncodePageTitle,tvEncodePageSubtitle,tvImageToEncodeLabel,cvUploadArea,tvSecretMessageLabel,tilSecretMessage,tvPasswordLabel,tilPassword,btnEncodeImage" />

    <!-- Top Icon (Part of groupEncodeInputForm) -->
    <ImageView
        android:id="@+id/ivEncodePageIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_dialog_email" 
        app:tint="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/btnBackToDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title (Part of groupEncodeInputForm) -->
    <TextView
        android:id="@+id/tvEncodePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Encode Image"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivEncodePageIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle (Part of groupEncodeInputForm) -->
    <TextView
        android:id="@+id/tvEncodePageSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hide your secret message in an image."
        android:textColor="#B0B0B0"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvEncodePageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Image to Encode Label (Part of groupEncodeInputForm) -->
    <TextView
        android:id="@+id/tvImageToEncodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Image to Encode"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvEncodePageSubtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Image Upload Area (Part of groupEncodeInputForm) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvUploadArea"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#252338"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="#4A485F"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvImageToEncodeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivUploadIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_upload" 
                app:tint="#B0B0B0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvUploadHint"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tvUploadHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to upload"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ivUploadIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Secret Message Label (Part of groupEncodeInputForm) -->
    <TextView
        android:id="@+id/tvSecretMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Secret Message"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/cvUploadArea"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Secret Message Input (Part of groupEncodeInputForm) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSecretMessage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="#8A889D"
        app:boxStrokeColor="#4A485F"
        app:hintTextColor="#8A889D"
        app:startIconDrawable="@android:drawable/ic_menu_edit" 
        app:startIconTint="#8A889D"
        app:boxBackgroundColor="#252338"
        app:layout_constraintTop_toBottomOf="@+id/tvSecretMessageLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSecretMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your secret data..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:textColor="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Label (Part of groupEncodeInputForm) -->
    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tilSecretMessage"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Password Input (Part of groupEncodeInputForm) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="#8A889D"
        app:boxStrokeColor="#4A485F"
        app:hintTextColor="#8A889D"
        app:startIconDrawable="@android:drawable/ic_lock_lock" 
        app:startIconTint="#8A889D"
        app:boxBackgroundColor="#252338"
        app:endIconMode="password_toggle"
        app:endIconTint="#8A889D"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the key"
            android:inputType="textPassword"
            android:textColor="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Encode Image Button (Part of groupEncodeInputForm) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEncodeImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Encode Image"
        android:textColor="@android:color/white"
        android:backgroundTint="#7B1FA2"
        app:icon="@android:drawable/ic_secure" 
        app:iconTint="@android:color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Encoding Success UI (Initially hidden) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutEncodeSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" 
        app:layout_constraintTop_toBottomOf="@id/btnBackToDashboard" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/ivSuccessIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@android:drawable/checkbox_on_background" 
            app:tint="#4CAF50" 
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvSuccessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encoding Complete"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivSuccessIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvSuccessSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your message is securely hidden in the image."
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvSuccessTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/ivEncodedImagePreview"
            android:layout_width="0dp"
            android:layout_height="200dp" 
            android:layout_marginTop="24dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/backgrounds/scenic" 
            app:layout_constraintTop_toBottomOf="@id/tvSuccessSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#252338"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadEncoded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Download"
            android:textColor="@android:color/white"
            android:backgroundTint="#7B1FA2"
            app:icon="@android:drawable/stat_sys_download" 
            app:iconTint="@android:color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivEncodedImagePreview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnShareEncoded"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareEncoded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Share"
            android:textColor="@android:color/white"
            android:backgroundTint="#7B1FA2"
            app:icon="@android:drawable/ic_menu_share" 
            app:iconTint="@android:color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivEncodedImagePreview"
            app:layout_constraintStart_toEndOf="@+id/btnDownloadEncoded"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
